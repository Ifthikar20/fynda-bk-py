# =============================================================================
# Fetch Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-with-django

# Set to False in production!
DEBUG=True

# Comma-separated list of domains
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE
# =============================================================================

# Development: Uses SQLite by default (no config needed)
# Production: Use PostgreSQL
# DB_NAME=fetchbot
# DB_USER=postgres
# DB_PASSWORD=your-secure-password
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSL_MODE=require

# =============================================================================
# REDIS (Caching & Celery)
# =============================================================================

# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0

# =============================================================================
# AI/ML API KEYS
# =============================================================================

# OpenAI - For NLP query parsing and Vision analysis
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# MARKETPLACE APIs
# =============================================================================

# eBay Browse API
# Register at: https://developer.ebay.com/signin
EBAY_APP_ID=your-ebay-app-id
EBAY_CERT_ID=your-ebay-cert-id
EBAY_SANDBOX=false

# Best Buy Products API
# Register at: https://developer.bestbuy.com
BESTBUY_API_KEY=your-bestbuy-api-key

# =============================================================================
# RAPIDAPI SERVICES
# =============================================================================

# Used for Facebook Marketplace, TikTok, Instagram, Pinterest
# Register at: https://rapidapi.com
RAPIDAPI_KEY=your-rapidapi-key

# =============================================================================
# AFFILIATE NETWORKS (40,000+ retailers)
# =============================================================================

# CJ Affiliate (Commission Junction) - 3,000+ brands
# Apply at: https://signup.cj.com/member/signup/publisher/
CJ_AFFILIATE_API_TOKEN=
CJ_WEBSITE_ID=

# Rakuten Advertising - 2,500+ retailers
# Apply at: https://rakutenadvertising.com/publishers/
RAKUTEN_API_TOKEN=
RAKUTEN_SITE_ID=

# ShareASale - 16,000+ merchants
# Apply at: https://www.shareasale.com/info/affiliates
SHAREASALE_AFFILIATE_ID=
SHAREASALE_API_TOKEN=
SHAREASALE_API_SECRET=

# =============================================================================
# SECURITY (PRODUCTION ONLY)
# =============================================================================

# Secret Admin URL Path (without leading/trailing slashes)
# Example: manage-fynda-8x2k9 -> access at api.fynda.shop/manage-fynda-8x2k9/
ADMIN_URL=admin

# CORS - Comma-separated list of allowed frontend origins
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF - Comma-separated list of trusted origins
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# =============================================================================
# AWS (Optional - for S3/CloudFront media storage)
# =============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_CLOUDFRONT_DOMAIN=

# =============================================================================
# LOGGING (Production)
# =============================================================================

# LOG_FILE=/var/log/fetchbot/app.log
# LOG_LEVEL=WARNING

# =============================================================================
# OAUTH / SOCIAL LOGIN
# =============================================================================

# Google OAuth 2.0
# Setup at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback

# Apple Sign In
# Setup at: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=your-apple-service-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/AuthKey.p8
APPLE_REDIRECT_URI=http://localhost:5173/auth/callback
